{
  "private": true,
  "license": "MIT",
  "homepage": "https://fritch.mn",
  "repository": "dan-fritchman/fritch.mn",
  "bugs": "https://github.com/dan-fritchman/fritch.mn/issues",
  "devDependencies": {
    "eslint": "^5.16.0",
    "eslint-config-prettier": "^4.1.0",
    "eslint-config-xo": "^0.26.0",
    "eslint-plugin-import": "^2.17.2",
    "eslint-plugin-prettier": "^3.0.1",
    "eslint-plugin-react": "^7.12.4",
    "gatsby": "^2.3.24",
    "husky": "^1.3.1",
    "lint-staged": "^8.1.5",
    "prettier": "^1.17.0",
    "remark-cli": "^6.0.1",
    "remark-preset-wooorm": "^4.0.0"
  },
  "scripts": {
    "dev": "gatsby develop",
    "build": "gatsby build",
    "clean": "gatsby clean",
    "deploy": "now",
    "deploy-staging": "now --target staging",
    "deploy-prod": "now --target production",
    "now-build": "yarn build",
    "format": "remark . -qfo && eslint . --fix"
  },
  "workspaces": [
    "packages/*",
    "docs"
  ],
  "prettier": {
    "tabWidth": 2,
    "useTabs": false,
    "singleQuote": true,
    "bracketSpacing": false,
    "semi": false,
    "trailingComma": "none"
  },
  "remarkConfig": {
    "plugins": [
      "remark-mdx",
      "preset-wooorm",
      [
        "lint-no-heading-punctuation",
        false
      ],
      [
        "lint-maximum-line-length",
        false
      ],
      [
        "validate-links",
        false
      ]
    ]
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ],
    "*.md": [
      "remark -qf",
      "git add"
    ]
  }
}
